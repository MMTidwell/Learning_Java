package com.activities;

public class Hour6 {
	public static void main (String[] args) {
		String title = "Sharknado";
		int year = 2013;
		String director = "Anthony Ferrante";
		String role1 = "Fin";
		String actor1 = "Ian Ziering";
		String role2 = "April";
		String actor2 = "Tara Reid";
		String role3 = "George";
		String actor3 = "John Heard";
		String role4 = "Nova";
		String actor4 = "Cassie Scerbo";
		
		System.out.println(title.toUpperCase() + " (" + year + ")\n"
				+ "A " + director.toUpperCase() + " film. \n\n" +
				role1.toUpperCase() + "\t" + actor1.toUpperCase() + "\n" +
				role2.toUpperCase() + "\t" + actor2.toUpperCase() + "\n" +
				role3.toUpperCase() + "\t" + actor3.toUpperCase() + "\n" +
				role4.toUpperCase() + "\t" + actor4.toUpperCase());
	}
}
